@using RecipeHub.Web.ViewModels.Recipe
@model RecipeAndCategoryModel
@{
    ViewBag.Title = "All Recipes";
}

<h2 class="text-center mt-4">Our Recipes</h2>

<form asp-action="All" method="get">
    <div class="form-actions no-color text-center">
        <p>
            <label>Find Recipe: <input class="p-2 rounded" type="text" name="searchText" value="@ViewData["SearchText"]" /></label>
            <a asp-action="All" class="text-end btn btn-secondary m-1 rounded">Back to Full List</a>
        </p>
    </div>
</form>
<div class="dropdown">
    <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Select Category
    </button>
    <ul class="dropdown-menu p-2" style="min-width: 200px;">
    @foreach(var category in Model.CategoryNames)
        {
            <li>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="SelectedOptions">
                    <label class="form-check-label">@category</label>
                </div>
            </li>
        }
       
    </ul>
</div>



<div class="container mt-4">
    <div class="row">
        @foreach (var recipe in Model.Recipes)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm text-center">
                    <img src="@recipe.ImageUrl" class="card-img-top" alt="@recipe.Name" style="height: 250px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@recipe.Name</h5>
                        <a asp-controller="Recipe" asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-outline-primary mt-2">
                            View Recipe
                        </a>         
                    </div>
                </div>
            </div>
        }
    </div>
</div>