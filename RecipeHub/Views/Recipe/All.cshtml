@using RecipeHub.Web.ViewModels.Recipe
@model IEnumerable<AllRecipesViewModel>
@{
    ViewBag.Title = "All Recipes";
}

<h2 class="text-center mt-4">Our Recipes</h2>

<div class="container mt-4">
    <div class="row">
        @foreach (var recipe in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm text-center">
                    <img src="/images/@recipe.ImageUrl" class="card-img-top" alt="@recipe.Name" style="height: 250px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@recipe.Name</h5>
                        <a asp-controller="Recipe" asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-outline-primary mt-2">
                            View Recipe
                        </a>
                        <a asp-controller="Recipe" asp-action="AddSteps" asp-route-id="@recipe.Id" class="btn btn-outline-primary mt-2">
                            Add Steps
                        </a>
                        <a asp-controller="Recipe" asp-action="AddIngredients" asp-route-id="@recipe.Id" class="btn btn-outline-primary mt-2">
                            Add Ingredients
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>